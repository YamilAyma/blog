---
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"posts">;
    variant?: "large" | "small" | "wide";
    postId: string;
    rawBody?: string;
}

const { post, variant = "small", postId, rawBody = "" } = Astro.props;
const { image, copy, socials } = post.data;

// Usar copy del frontmatter o rawBody del MDX (sin markdown)
const textContent = copy || rawBody.replace(/[#*_`>\[\]]/g, "").trim();

// Truncar copy a un número de palabras según variante
const maxWords = variant === "large" ? 25 : variant === "wide" ? 20 : 12;
const truncatedCopy =
    textContent.split(" ").slice(0, maxWords).join(" ") +
    (textContent.split(" ").length > maxWords ? "..." : "");

// Iconos de redes sociales
