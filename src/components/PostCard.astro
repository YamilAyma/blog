---

<article
    class={`post-card post-card--${variant}`}
    data-post-id={postId}
    data-modal-trigger={postId}
    role="button"
    tabindex="0"
    aria-label="Ver detalles del post"
>
    <div class="post-card__image-container">
        <img src={image} alt="" class="post-card__image" loading="lazy" />
        <div class="post-card__overlay"></div>
    </div>

    <div class="post-card__content">
        <p class="post-card__copy">{truncatedCopy}</p>

        {
            socials && (
                <div class="post-card__socials">
                    {Object.entries(socials).map(
                        ([platform, url]) =>
                            url && (
                                <a
                                    href={url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="post-card__social-link"
                                    aria-label={`Ver en ${platform}`}
                                    set:html={socialIcons[platform]}
                                />
                            ),
                    )}
                </div>
            )
        }
    </div>
</article>

<style>
    .post-card {
        position: relative;
        border-radius: 1.5rem;
        overflow: hidden;
        background: var(--color-primary);
        cursor: pointer;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }

    .post-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .post-card:focus {
        outline: 2px solid var(--md-a, #a855f7);
        outline-offset: 2px;
    }

    .post-card__image-container {
        position: relative;
        width: 100%;
        aspect-ratio: 1;
        overflow: hidden;
    }

    .post-card--wide .post-card__image-container {
        aspect-ratio: 2/1;
    }

    .post-card__zoom-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.8);
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        color: #333;
        opacity: 0;
        transition:
            opacity 0.3s ease,
            transform 0.3s ease;
    }

    .post-card__image-container:hover .post-card__zoom-icon {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }

    .post-card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .post-card:hover .post-card__image {
        transform: scale(1.05);
    }

    .post-card__overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.6) 0%,
            transparent 50%
        );
        pointer-events: none;
    }

    .post-card__content {
        padding: 1rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .post-card--large .post-card__content {
        padding: 1.25rem 1.5rem;
    }

    .post-card__copy {
        font-size: 0.9rem;
        line-height: 1.5;
        color: var(--color-text);
        margin: 0;
    }

    .post-card--large .post-card__copy {
        font-size: 1rem;
    }

    .post-card__socials {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .post-card__social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.08);
        color: var(--color-text);
        transition:
            background 0.2s ease,
            color 0.2s ease,
            transform 0.2s ease;
    }

    .post-card__social-link:hover {
        background: var(--md-a);
        color: white;
        transform: scale(1.1);
    }

    /* Mobile variant styles */
    @media (max-width: 768px) {
        .post-card--mobile {
            display: flex;
            flex-direction: row;
            border-radius: 1rem;
        }

        .post-card--mobile .post-card__image-container {
            width: 40%;
            min-width: 120px;
            aspect-ratio: 1;
            flex-shrink: 0;
        }

        .post-card--mobile .post-card__content {
            flex: 1;
            justify-content: center;
            padding: 1rem;
        }

        .post-card--mobile .post-card__overlay {
            display: none;
        }
    }
</style>
