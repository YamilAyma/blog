---
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Página no encontrada"
    description="Esta página no existe o fue removida."
>
    <div
        class="flex flex-col items-center justify-center min-h-[60vh] text-center px-6"
    >
        <img
            src="/images/404.png"
            alt="Página no encontrada"
            class="w-48 h-48 mb-8 opacity-80"
        />

        <h1
            class="text-4xl font-bold font-heading mb-4"
            style="color: var(--md-h1);"
        >
            Página no encontrada
        </h1>

        <p class="text-lg mb-6" style="color: var(--md-p);">
            La página que buscas no existe o fue movida.
        </p>

        <p class="text-sm mb-8" style="color: var(--md-blockquote);">
            Serás redirigido al inicio en <span id="countdown">5</span> segundos...
        </p>

        <a
            href="/"
            class="nav-link text-lg font-medium px-6 py-3 rounded-lg border transition-colors"
            style="border-color: var(--color-border);"
        >
            Ir al inicio ahora
        </a>
    </div>
</Layout>

<script>
    const countdownEl = document.getElementById("countdown");
    let seconds = 5;

    const interval = setInterval(() => {
        seconds--;
        if (countdownEl) countdownEl.textContent = seconds.toString();

        if (seconds <= 0) {
            clearInterval(interval);
            window.location.href = "/";
        }
    }, 1000);
</script>
